@model HomeLoanManagementSystem.Models.Admin

@{
    ViewData["Title"] = "Login";
}



<div class="mask d-flex align-items-center h-75 gradient-custom-2">
    <div class="container my-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-5 my-5">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-5">
                        <form asp-action="Login">

                            <h2 class="text-uppercase text-center mb-5">Admin Login</h2>

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="AdminId" class="control-label">ID</label>
                                <input asp-for="AdminId" class="form-control" />
                                <span asp-validation-for="AdminId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label">Password</label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group text-center">
                                <input type="submit" value="Login" class="btn btn-secondary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


