@model IEnumerable<HomeLoanManagementSystem.Models.Loan>

@{
    ViewData["Title"] = "ViewAllLoans";
}

<h1>ViewAllLoans</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LoanStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApprovedAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.application)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LoanStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApprovedAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoanStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoanEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.application.EmployeeType)
            </td>
        </tr>
}
    </tbody>
</table>
