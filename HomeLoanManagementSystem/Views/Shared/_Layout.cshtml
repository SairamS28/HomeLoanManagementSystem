<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HouseLoan</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
        <link href="~/css/StyleSheet.css" rel="stylesheet" /> 

    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

        <!-- Font Awesome -->
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.css"
          rel="stylesheet" />
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>
<body>
    <header>
        <!-- Image and text -->
        <!-- Just an image -->
        <nav class="py-5 justify-content-start my-1" style="background-color:rgba(29,129,159,1)">
            <a class="navbar-brand" href="#">
                <img src="~/assets/Logog.png" width="50" height="50" alt="">
            </a>
            <p class="text-warning" style="font-size:x-large">Home Loan Management System</p>
        </nav>
        <!-- Navigation-->
        <a class="menu-toggle rounded" href="#"><i class="fas fa-bars"></i></a>
        <nav id="sidebar-wrapper"class="text-center">
            <ul class="sidebar-nav">
                <li class="sidebar-nav-item" style="font-size:medium">
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="sidebar-nav-item" style="font-size:medium">
                        <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Register">Register</a>
                    </li>
                    <li class="sidebar-nav-item" style="font-size:medium">
                        <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                    </li>
                }
                else
                {
                    <li class="sidebar-nav-item" style="font-size:medium">
                        <a class="nav-link text-white" asp-action="application" asp-area="" asp-controller="User">Application</a>
                    </li>
                    <li class="sidebar-nav-item" style="font-size:medium">
                        <a class="nav-link text-white" asp-action="ChangePassword" asp-area="" asp-controller="User">Change Password</a>
                    </li>
                    <li class="sidebar-nav-item" style="font-size:medium">
                        <a class="nav-link text-white" asp-action="Details" asp-area="" asp-controller="User">Details</a>
                    </li>
                    <li class="sidebar-nav-item" style="font-size:medium">
                        <a class="nav-link text-white" asp-action="logout" asp-area="" asp-controller="User">Logout</a>
                    </li>
                }
            </ul>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- Remove the container if you want to extend the Footer to full width. -->
    <div class="my-2">

        <footer class="text-center text-lg-start" style="background-color: rgba(29,129,159,1);">
            <div class="container d-flex justify-content-center py-5">
                <button type="button" class="btn btn-primary btn-lg btn-floating mx-2" style="background-color: rgba(29,129,159,0.2);">
                    <i class="fab fa-facebook-f"></i>
                </button>
                <button type="button" class="btn btn-primary btn-lg btn-floating mx-2" style="background-color: rgba(29,129,159,0.2);">
                    <i class="fab fa-youtube"></i>
                </button>
                <button type="button" class="btn btn-primary btn-lg btn-floating mx-2" style="background-color: rgba(29,129,159,0.2);">
                    <i class="fab fa-instagram"></i>
                </button>
                <button type="button" class="btn btn-primary btn-lg btn-floating mx-2" style="background-color: rgba(29,129,159,0.2);">
                    <i class="fab fa-twitter"></i>
                </button>
            </div>

            <!-- Copyright -->
            <div class="text-center text-white p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                Admin Login:
                <a class="text-white" asp-action="Login" asp-controller="Admin" asp-area="">Admins Only</a>
            </div>
            <!-- Copyright -->
        </footer>

    </div>
    <!-- End of .container -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/JavaScript.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
